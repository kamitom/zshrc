set number
set clipboard=unnamed
set cursorline
set noswapfile

" search
set incsearch
set hlsearch
set ignorecase

" tab and space
set softtabstop=2
set shiftwidth=2
set expandtab

" tab
set showtabline=2
set splitbelow
set splitright

" color
syntax on
colorscheme darkblue

" filetype
filetype on 
filetype indent on 
filetype plugin on

set nocompatible

